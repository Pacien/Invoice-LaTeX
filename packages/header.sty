\ProvidesPackage{./packages/header}[2017/01/28 Invoice header]

% #1: title
% #2: issuer
% #3: recipient
% #4: meta information
\newcommand{\writeheader}[4]{
	\noindent
	
	\begin{minipage}[t]{.6\textwidth}
	\raggedright
	{\huge #1}\\
	\vspace{3ex}
	{\small #2}
	\end{minipage}%
	\begin{minipage}[t]{.4\textwidth}
	\raggedright
	{\small #4}
	\vspace{4ex}
	{\large #3}
	\end{minipage}

	\vspace{3ex}
}

% #1: content
\newcommand{\writefooter}[1]{
	\vfill\raggedright\footnotesize
	#1
}

\endinput
