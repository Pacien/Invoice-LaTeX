\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{./packages/header}[2017/01/28 Invoice header]

% #1: title
% #2: issuer
% #3: recipient
% #4: meta keys
% #5: meta values
\newcommand{\writeheader}[5]{
	{\huge #1}

	%From Field
	\begin{textblock}{12.6}(0.8,1.3)
	\raggedright
	{\small #2}
	\end{textblock}

	%To Field
	\begin{textblock}{12.6}(10,3)
	\raggedright
	{\large #3}
	\end{textblock}

	%Informations Field
	\begin{textblock}{4}(10,1.3)
	\raggedright
	{\small #4}
	\end{textblock}

	%Informations Values Field
	\begin{textblock}{4}(10,1.3)
	\raggedleft
	{\small	#5}
	\end{textblock}
}

\endinput
